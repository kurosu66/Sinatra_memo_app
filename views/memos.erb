<h1>メモ一覧</h1>

<div class="content">
  <div class="button_change">
    <button class="button_common" type="button" onclick=location.href="new">追加</button>
  </div>

<ul>
  <% @conn.exec( "SELECT * FROM memos" ) do |result| %>
    <% result.each do |row| %>
      <a href="memos/<%= row["id"] %>"><li><%= sanitize row["title"] %></li></a>
    <% end %>
  <% end %>
</ul>
</div>
