<h1>メモ一覧</h1>

<div class="content">
  <div class="button_change">
    <button class="button_common" type="button" onclick=location.href="new">追加</button>
  </div>

<ul>
  <% unless @memos.nil? %>
    <% @memos.each do |memo| %>
      <% memo_id = memo[0] %>
      <li><a href="memos/<%= memo_id %>"><%= sanitize memo[1]["title"] %></li>
    <% end %>
  <% end %>
</ul>
</div>
